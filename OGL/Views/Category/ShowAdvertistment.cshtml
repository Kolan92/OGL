@model Repository.Models.AdvertistmentsFromCategoryViewModels

    @{
        ViewBag.Title = "ShowAdvertistment";
    }

    <h2>ShowAdvertistments: @Model.CategoryName</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Advertistments.First().ApplicationUser.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Advertistments.First().AdvertisementText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Advertistments.First().AdvertistmentTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Advertistments.First().PublishDate)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Advertistments)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplicationUser.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AdvertisementText)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AdvertistmentTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PublishDate)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
