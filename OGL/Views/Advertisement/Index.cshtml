

@model PagedList.IPagedList<Repository.Models.Advertisement>
@using PagedList.Mvc;

    <link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

    @{
        ViewBag.Title = "Index";
    }

    <h2>Lista ogłoszeń</h2>

    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].UserID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].AdvertisementText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].AdvertistmentTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].PublishDate)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AdvertisementText)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AdvertistmentTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PublishDate)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-warning" })
                    @if (User.Identity.IsAuthenticated && (User.IsInRole("Admin") || User.IsInRole("Worker")))
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                        if (User.IsInRole("Admin"))
                        {
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                        }
                    }
                </td>
            </tr>
        }

    </table>

    <div>
        <br />
        Strona @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) z @Model.PageCount
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>
